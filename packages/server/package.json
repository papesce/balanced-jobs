  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "ts-node build.ts && tsc",
    "dev": "nodemon src/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "test": "exit 1",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit",
    "convert:api": "api-spec-converter -f openapi_3 -t swagger_2 -s yaml -c -d ./src/api/swagger/api.v3.yaml > ./src/api/swagger/api.yaml"
  },
  "dependencies": {
    "api-spec-converter": "^2.11.0",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "http-status-codes": "^1.3.0",
    "mongoose": "^5.3.11",
    "pino": "^5.8.1",
    "swagger-express-middleware": "^4.0.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.24",
    "@types/chai": "^4.1.4",
    "@types/express": "^4.16.0",
    "@types/mongoose": "^5.3.1",
    "@types/pino": "^5.20.0",
    "chai": "^4.1.2",
    "nodemon": "^1.18.6",
    "pino-pretty": "^2.2.3",
    "shelljs": "^0.8.3",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  }
}
